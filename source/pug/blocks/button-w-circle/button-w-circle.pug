mixin button-w-circle(data)
    if data.type == 'submit'
        +el({
            tag: data.tag ? data.tag : 'label',
            class: 'button-w-circle',
            mod: data.mod,
            mix: data.mix,
            js: data.js,
            ariaLabel: 'Искать',
        })
            if data.icon
                +el({
                    tag: 'svg',
                    icon: data.icon,
                    class: 'button-w-circle__icon',
                })
            +el({
                tag: 'input',
                class: 'hidden',
                type: 'submit',
                disabled: data.disabled,
            })&attributes(attributes)

    else
        +el({
            tag: data.tag ? data.tag : 'button',
            class: 'button-w-circle',
            mix: data.mix,
            mod: data.mod,
            js: data.js,
            before: data.before,
            after: data.after,
            position: data.position,
            title: data.title,
            target: data.target,
            href: data.href
        })&attributes(attributes)
            if data.icon
                +el({
                    tag: 'svg',
                    icon: data.icon,
                    class: 'button-w-circle__icon',
                })
            if  data.badge
                +el({
                    tag: 'span',
                    class: 'button-w-circle__badge',
                    text: data.badge
                })
            if data.close
                +el({
                    tag: 'span',
                    class: 'button-w-circle__close',
                })
