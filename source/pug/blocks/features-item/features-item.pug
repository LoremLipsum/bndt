mixin features-item(data)
    +el({
        class: 'features-item',
        mod: data.mod,
        mix: data.mix,
        js: data.js,
    })&attributes(attributes)
        +el({
            tag: 'svg',
            icon: data.icon,
            mix: 'features-item__icon',
        })
        +el({
            class: 'features-item__text',
            text: data.text
        })
