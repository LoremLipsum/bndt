mixin franchise(data)
    +el({
        class: 'franchise',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        .franchise__wrap
            .franchise__inner
                .franchise__heading
                    | Открой для себя бизнес с&nbsp;брендом BANDIT
                .franchise__text
                    | Наша франшиза&nbsp;&mdash; это нечто большее, чем просто бизнес.
                +request({
                    mix: 'franchise__request',
                    submit: 'Получить финансовую модель компании'
                })
