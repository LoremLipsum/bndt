mixin gallery-item(data)
    +el({
        tag: data.tag,
        class: 'gallery-item',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        +el({
            tag: 'img',
            class: 'gallery-item__image',
            image: data.image,
        })
        +el({
            class: 'gallery-item__descr',
            text: data.text,
        })
