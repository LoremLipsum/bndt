mixin reviews(data)
    +el({
        class: 'reviews',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        .reviews__wrap
            .reviews__inner
                .reviews__top
                    h2.reviews__heading Что говорят о Bandit
                    .reviews__control
                        +control({
                            tag: 'button',
                            mod: 'prev',
                            mix: 'swiper-prev'
                        })
                        +control({
                            tag: 'button',
                            mod: 'next',
                            mix: 'swiper-next'
                        })
                +el({
                    tag: 'ul',
                    class: 'reviews__list',
                })
                    each item in data.items
                        +el({
                            tag: 'li',
                            class: 'reviews__item',
                        })
                            +reviews-item({
                                social: item.social,
                                text: item.text,
                                heading: item.heading,
                                image: item.image,
                            })
